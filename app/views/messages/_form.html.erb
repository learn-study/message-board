<%= form_for @message, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="message_name" class="col-xs-2 control-label">名前:</label>
    <div class="col-xs-10">
      <%= f.text_field :name,  class: "form-control" %>
    </div>
  </div>

    <div class="form-group">
      <label for="message_age" class="col-xs-2 control-label">年齢:</label>
      <div class="col-xs-10">
      <%= f.select :age, options_for_select((0..150).map{|num| ["#{num}才", num]}, selected: "20"), {}, { class: 'form-control' } %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-2 control-label">性別:</div>
      <div class="col-xs-10">
        <label class="checkbox-inline"><%= f.radio_button :gender,1 %>男性</label>
        <label class="checkbox-inline"><%= f.radio_button :gender,2 %>女性</label>
      </div>
    </div>

  <div class="form-group">
    <label for="message_body" class="col-xs-2 control-label">内容:</label>
    <div class="col-xs-10">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary btn-block form-control" %>  
    </div>
  </div>
<% end %>